<?xml version="1.0" encoding="UTF-8"?>
<?language JavaScript?>
 
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
 
<VBox fx:id="vbox"  prefHeight="250.0" prefWidth="300.0"  xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="FxmlTrail.FxmlTrail.Controller">
 
  <children>
    <Label  alignment="CENTER_LEFT"  prefHeight="30.0" prefWidth="200.0" text="Please insert Your Input here:" textAlignment="LEFT" />
    <TextField fx:id="inputText"  prefHeight="30.0" prefWidth="100.0" />
    <Label> </Label>
    <Button  alignment="CENTER_RIGHT" contentDisplay="CENTER" text="OK"  onAction="#printOutput" textAlignment="CENTER" />
    <Label  alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="200.0" text="Your Input:" textAlignment="LEFT" />
    <TextArea fx:id="outputText" prefHeight="30.0" prefWidth="100.0" />
  </children>
</VBox>